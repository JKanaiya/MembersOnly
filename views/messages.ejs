<div class="message">
<% if(!locals.user){ %>
  <h3> AnonAuthor
    </h3> 
    <% }%>
    <% if(locals.user){ %>
      <h3 name="userName">
        <%= userName %> 
        </h3>
        <% }%>
        <p class="messageText" name="messageContent">
        "<%= text %>"
        </p>
        <% if(locals.user){ %>
          <p name="time">
            <%= time %> 
            </p>
            <% if(locals.user && locals.user.role == "admin"){ %>
              <p name="writerName">
                <%= writerName %> 
                </p>
                <a class="button delete" href="<%=`/deleteMessage/${messageId}`%>"> Delete </a>
                <% }%>
                <% }%>
                </div>
